ENTITY_DIE {
	$maxExp = $obj2.level * 100
	$obj2.exp = $obj2.exp + 100
	If ($obj2.exp >= $maxExp) {
		$obj2.exp = $obj2.exp - $maxExp
		$obj2.level = $obj2.level + 1
		AddEntityBuff(buffTime = 60, cfg = "myplugin/99ddb495-8511-43cf-aea7-0d4815ddef78", entity = $obj2)
		ShowTip(entity = $obj2, keepTime = 60, textKey = Concat(p1 = "Level ", p2 = ToString($obj2.level)), tipType = "1")
		SendToClient(msg = "client_48bb0808_eb2d_47f1_97cd_183044aa2afd", player = $obj2)
	}
}
